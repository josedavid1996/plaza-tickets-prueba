{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "./src/preload"],
    "paths": {
      "@main/*": ["src/main/*"],
      "@render/*": ["src/render/*"],
      "@common/*": ["src/common/*"],
      "@pages/*": ["src/render/pages/*"],
      "@assets/*": ["src/render/assets/*"],
      "@components/*": ["src/render/components/*"],
      "@generated/*": ["src/render/generated/*"],
      "@graphql/*": ["src/render/graphql/*"],
      "@hooks/*": ["src/render/hooks/*"],
      "@routes/*": ["src/render/routes/*"],
      "@store/*": ["src/render/store/*"],
      "@utils/*": ["src/render/utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"]
}
